{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "pretty": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "files": [
    "src/merge-i18n.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}